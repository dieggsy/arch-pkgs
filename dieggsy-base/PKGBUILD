# Maintainer: dieggsy <dieggsy@pm.me>

pkgname=dieggsy-base
pkgver=3.2
pkgrel=1
pkgdesc="Base system meta-package"
arch=('any')
url="https://github.com/dieggsy/arch-pkgs"
license=('MIT')
groups=('dieggsy')
depends=(ccache
         cronie
         gdb
         git
         htop
         mlocate
         autossh
         ncdu
         ntp
         neovim
         pacman-contrib
         python-neovim
         reflector
         ripgrep
         rsync
         stow
         yay-bin
         zsh
         zsh-autopair-git
         zsh-autosuggestions
         zsh-completions
         zsh-history-substring-search

         # base
         base
         linux
         linux-firmware
         diffutils
         man-db
         man-pages
         openssh
         reflector

         # base-devel
         autoconf
         automake
         gcc
         make
         patch
         pkgconf
         sudo
         util-linux)

post_install() {
    systemctl enable --now cronie.service
    systemctl enable --now ntpd.service
    systemctl enable --now paccache.timer
}

